<h1>Room Details</h1>

<div class="container">
  <div class="row my-row">
    <div class="col-xl-8 my-col ">
      Rooms
    </div>
    <div class="col-xl-4 my-col">
      OPTIONS
    </div>
  </div>
  <% @room_details.each do |room_detail| %>
  <div class="row my-row-he">
    <div class="col-xl-8 my-col">
        <div class="img-container">
              <div id="carousel_<%= room_detail.id %>" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
              <% (0...room_detail.images.count).each do |image| %>
                <div class="carousel-item <%= 'active' if image == 0 %> ">
                  <%= image_tag room_detail.images[image], style: "height:300px",class: "d-block w-100" %>
                </div>
              <% end %>
              </div>
              <a class="carousel-control-prev" href="#carousel_<%= room_detail.id %>" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carousel_<%= room_detail.id %>" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
        </div>

      </div>
    <div class="col-xl-4 my-col">
      <div class="row">
        <div class="col-xl-6">
      </br>
      <small>Per Night</small></br>
      <i class="fa fa-inr"></i>&nbsp;<big><%= room_detail.price_per %>/-</big></br>
      &nbsp;&nbsp;<small>+<i class="fa fa-inr"></i><%= (room_detail.price_per * 0.12) %>&nbsp;taxes & fees</small></br></br>
      </div>
        <div class="col-xl-6">
          </br></br>
          <%= link_to 'Book', room_detail, class: "btn btn-success" %>
          
            <%#= link_to 'Details', services_path,  {remote: :true, 'data-toggle':  "modal", 'data-target': '#modal-window', class: 'btn btn-primary'}  %>
            <%= link_to 'Details', details_path(id: room_detail), class: 'btn btn-primary'  %>
            <div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
              <div class="modal-dialog modal-xl" role="document">
                <div class="modal-content">
                  <%#= render 'room_details/services', locals: {room: room_detail} %>
                  <%= render :partial => "room_details/services", :locals => { :room => room_detail } %>
                </div>
              </div>
            </div>
          <% if current_user && current_user.admin? %>
          <%= link_to 'Edit', edit_room_detail_path(room_detail), class: "btn btn-light" %>
          <%= link_to 'Destroy', room_detail, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-light" %>
          <% end %>
        </div>
      </div>
      <h7><i class="fa fa-times-circle-o"></i>&nbsp;Non-Refundable</h7></br>
      <h7><i class="fa fa-check-circle-o"></i>&nbsp;No meals included</h7></br></br>
       <h3><%= room_detail.room_type %> with <%= room_detail.room_view %></h3>
      <div class="row">
        <div class="col-md">
          <h7><i class="fa fa-window-maximize"></i>&nbsp;<%= (room_detail.room_size).to_i %>sq.ft</h7>
        </div>
        <div class="col-md">
          <h7><i class="fa fa-building-o"></i>&nbsp;<%= room_detail.room_view %></h7>
        </div>
        <div class="col-md">
          <h7><i class="fa fa-bed"></i>&nbsp;<%= room_detail.bed_type %></h7>
        </div>
      </div>


    </div>
  </div>
  <% end %>
</div>




