<p id="notice"><%= notice %></p>

<%= form_tag booking_details_path(user: current_user, hotel_id: @hotel_detail), method: :post do %>
<p>
  <strong>Hotel name:</strong>
  <%= @hotel_detail.hotel_name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @hotel_detail.address %>
</p>

<p>
  <strong>Room type:</strong>
  <%= @hotel_detail.room_type %>
</p>

<p>
  <strong>Price:</strong>
  <%= @hotel_detail.price %>
</p>

<p>
  <strong>Rooms:</strong>
  <%= @hotel_detail.rooms %>
</p>
<% if current_user && !current_user.admin? %>

  <h5>Enter the Number of rooms to be booked</h5>
  <div class="form-group ">
  <%= number_field_tag :rooms, params[:rooms], placeholder: "" ,
  autofocus: true, class: "form-control form-control-lg" %>     
  </div>

  <h5>Enter the starting date to be booked</h5>
  <div class="form-group ">
  <%= date_field_tag :from, params[:from], placeholder: "" ,
  autofocus: true, class: "form-control form-control-lg" %>     
  </div>

  <h5>Enter the ending date to be booked</h5>
  <div class="form-group ">
  <%= date_field_tag :to, params[:to], placeholder: "" ,
  autofocus: true, class: "form-control form-control-lg" %>      
  </div>

  <%= button_tag type: :submit, class: "btn btn-success" do %>
  <%= 'Book' %>
  <% end %>

<% end %> 
<% end %>



<% if !current_user  %>
<%= link_to 'Login Book', new_user_session_path %> |
<% end %>


<% if current_user && current_user.admin? %>
<%= link_to 'Edit', edit_hotel_detail_path(@hotel_detail) %> |
<% end %>
<%= link_to 'Back', hotel_details_path %>
