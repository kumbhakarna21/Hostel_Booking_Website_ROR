<p id="notice"><%= notice %></p>

<h1>Hotel Details</h1>

<table>
  <thead>
    <tr>
      <th>Hotel name</th>
      <th>Address</th>
      <th>Room type</th>
      <th>Price</th>
      <th>Rooms</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hotel_details.each do |hotel_detail| %>
      <tr>
        <td><%= hotel_detail.hotel_name %></td>
        <td><%= hotel_detail.address %></td>
        <td><%= hotel_detail.room_type %></td>
        <td><%= hotel_detail.price %></td>
        <td><%= hotel_detail.rooms %></td>
        <td><%= link_to 'Show', hotel_detail %></td>
        <% if current_user && current_user.admin? %>
        <td><%= link_to 'Edit', edit_hotel_detail_path(hotel_detail) %></td>
        <td><%= link_to 'Destroy', hotel_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hotel Detail', new_hotel_detail_path %>
<%= link_to 'Sign out', destroy_user_session_path, method: :delete %>

