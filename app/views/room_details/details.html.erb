


<div class="container">
    			<h1><%= @room_detail.room_type %> with <%= @room_detail.room_view %></h1>
              <div id="carousel_<%= @room_detail.id + 10 %>" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
              <% (0...@room_detail.images.count).each do |image| %>
                <div class="carousel-item <%= 'active' if image == 0 %> ">
                  <%= image_tag @room_detail.images[image], style: "height:350px",class: "d-block w-100" %>
                </div>
              <% end %>
              </div>
              <a class="carousel-control-prev" href="#carousel_<%= @room_detail.id + 10 %>" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carousel_<%= @room_detail.id + 10 %>" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
        </br>
        <div class="row">
        <div class="col-xl-2">
          <h7><i class="fa fa-window-maximize"></i>&nbsp;<%= (@room_detail.room_size).to_i %>sq.ft</h7>
        </div>
        <div class="col-xl-2">
          <h7><i class="fa fa-building-o"></i>&nbsp;<%= @room_detail.room_view %></h7>
        </div>
        <div class="col-xl-2">
          <h7><i class="fa fa-bed"></i>&nbsp;<%= @room_detail.bed_type %></h7>
        </div>
      </div>
</br>

<div class="div">
  <div class="row">
    <div class="col-md-12">
      <h3>Room Amenities</h3>
    </div>
    </br>
    <% @room_detail.master_services.each do |r|%>
    <div class="col-md-3">
      
      <h6><i class="fa fa-check-circle-o"></i>&nbsp;<%= r.service %></h6>
    </div>
    <% end %>
</br></br>
  </div>