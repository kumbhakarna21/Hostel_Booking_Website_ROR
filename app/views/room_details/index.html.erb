<p id="notice"><%= notice %></p>

<h1>Room Details</h1>

<table>
  <thead>
    <tr>
      <th>Hotel detail</th>
      <th>Room type</th>
      <th>Price per</th>
      <th>Bed type</th>
      <th>Room size</th>
      <th>Room view</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_details.each do |room_detail| %>
      <tr>
        <td><%= room_detail.hotel_detail_id %></td>
        <td><%= room_detail.room_type %></td>
        <td><%= room_detail.price_per %></td>
        <td><%= room_detail.bed_type %></td>
        <td><%= room_detail.room_size %></td>
        <td><%= room_detail.room_view %></td>
        <td><%= link_to 'Show', room_detail %></td>
        <td><%= link_to 'Edit', edit_room_detail_path(room_detail) %></td>
        <td><%= link_to 'Destroy', room_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

