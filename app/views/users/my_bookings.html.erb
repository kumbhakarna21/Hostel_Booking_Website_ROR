

<% if @booking_details %>
<table>
<thead>
    <tr>
      <th>Hotel name</th>
      <th>Address</th>
      <th>Room type</th>
      <th>Total Rooms Booked</th>
      <th>Booked From</th>
      <th>Booked Till</th>
      <th>TotalAmount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

 <tbody>
 
      <tr>
        <td><%= @booked_hotel.hotel_name %></td>
        <td><%= @booked_hotel.address %></td>
        <td><%= @booked_hotel.room_type %></td>
        <td><%= @booking_details.total_rooms %></td>
        <td><%= @booking_details.from_date %></td>
        <td><%= @booking_details.to_date %></td>
        <td><%= @booking_details.total_price %></td>
        <% if Date.today <= @booking_details.from_date - 1  %>
        <td><%= link_to 'Cancel Booking', booking_detail_path(current_user,@booked_hotel), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
        <td>
		<span class="badge badge-secondary">
			You Cannot Cancel Booking Now
		</span></td>
    	<% end %>
      </tr>
  </tbody>
</table>
<% else %>
<h1>You have no Bookings Currently</h1>
<% end %>