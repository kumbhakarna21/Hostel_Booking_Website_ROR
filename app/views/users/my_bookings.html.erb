

<% if @booking_details %>
<div class="wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-3"></div>
        <div class="col-md-5">
          <div class="card centered shadow-lg mt-2 mb-2 bg-white rounded">
            <div class="card-header">
              <h3>HotelBooking<small>Invoice</small></h3>
            </div>
            <div class="card-body">
              <div class="row form-group">
                <div class="col-12">
                  <center>
                    <i class="fa fa-check-circle"></i>
                  </center>
                </div>
              </div>
              <div class="row form-group">
                <div class="col-12">
                  <center>
                    <h4>Thankyou for your Booking</h4>
                  </center>
                </div>
              </div>
              <div class="row form-group">
                <div class="col-12">
                  <table class="table table-stripped">
                    <thead>
                      <tr class="bg-info">
                        <td>Booking Confirm No</td>
                        <td></td>
                        <td><%= @booking_details.id %></td>
                      </tr>
                    </thead>
                    <tbody>
                      <tr >
                        <td>Hotel Name</td>
                        <td></td>
                        <td><%= @hotel_details.hotel_name %></td>
                      </tr>
                      <tr >
                        <td>Address</td>
                        <td></td>
                        <td><%= @hotel_details.address %></td>
                      </tr>
                      <tr>
                        <td>Room type</td>
                        <td></td>
                        <td><%= @booked_room.room_type %></td>
                      </tr>
                      <tr>
                        <td>Booked From</td>
                        <td></td>
                        <td><%= @booking_details.from %></td>
                      </tr>
                      <tr>
                        <td>Booked Till</td>
                        <td></td>
                        <td><%= @booking_details.to %></td>
                      </tr>
                      <tr>
                        <td><strong>Total Amount</strong></td>
                        <td></td>
                        <td><%= @booking_details.total_price %></td>
                      </tr>
                      <tr>
                        <% if Date.today <= @booking_details.from - 1  %>
                        <td><%= link_to 'Cancel Booking', booking_detail_path(current_user,@booked_room), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        <% else %>
                        <td>
                          <span class="badge badge-secondary">
                            You Cannot Cancel Booking Now
                          </span>
                        </td>
                        <% end %>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>
<% else %>
<h1>You have no Bookings Currently</h1>
<% end %>